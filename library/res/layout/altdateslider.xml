<?xml version="1.0" encoding="utf-8"?>
<dev.dworks.widgets.adateslider.SliderContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:showDividers="middle" >

    <dev.dworks.widgets.adateslider.ScrollLayout
        style="@style/Scroller"
        app:childWidth="180dp"
        app:labelerClass="dev.dworks.widgets.adateslider.model.YearLabeler"
        app:labelerFormat="%tY" />

    <dev.dworks.widgets.adateslider.ScrollLayout
        style="@style/Scroller"
        app:childWidth="160dp"
        app:labelerClass="dev.dworks.widgets.adateslider.model.MonthLabeler"
        app:labelerFormat="%tB" />

    <dev.dworks.widgets.adateslider.ScrollLayout
        style="@style/Scroller"
        app:childWidth="45dp"
        app:labelerClass="dev.dworks.widgets.adateslider.model.DayDateLabeler"
        app:labelerFormat="%td %ta" />

</dev.dworks.widgets.adateslider.SliderContainer>